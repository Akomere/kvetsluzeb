block content
        .content-inner.chart-cont
            // ***** CONTENT *****
            .row
                .col-md-12
                    .invoice-title
                        div
                        img(src="img/second_logo.png" alt="")
                        p.pull-right.mt-3 Order # 12345
                    hr
                    .row
                        .col-md-6
                            address
                                strong Billed To:
